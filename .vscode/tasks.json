{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run tests on current file",
      "type": "shell",
      "command": "yarn",
      "args": ["jest", "--findRelatedTests", "${relativeFile}"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Start Grid example",
      "type": "shell",
      "command": "yarn",
      "args": ["dev:grid"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc-watch",
        {
          "owner": "powershell",
          "pattern": [
            {
              "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting the development server",
            "endsPattern": "You can now view"
          }
        }
      ],
      "isBackground": true
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "yarn",
      "args": ["watch"],
      "group": "build",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation in watch mode",
          "endsPattern": "Watching for file changes"
        }
      },
      "isBackground": true
    }
  ]
}
