{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    // strictness: exceptions for development (reverse in tsconfig.build.json)
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src", "@types"]
}
