{
  "name": "cevitxe-signal-server",
  "version": "0.1.8",
  "main": "src/Server.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/start.ts",
    "test": "jest",
    "dev": "nodemon",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "bs58": "^4",
    "express": "^4",
    "express-ws": "^4",
    "hypercore": "^7",
    "ws": "^7"
  },
  "devDependencies": {
    "@types/express": "^4",
    "@types/express-ws": "^3",
    "@types/jest": "^24",
    "@types/node": "^10",
    "@types/ws": "^5",
    "debug-deluxe": "^2",
    "jest": "^24",
    "kill-port": "^1",
    "mock-socket": "^8",
    "nodemon": "^1",
    "prettier": "^1",
    "supports-color": "^7",
    "ts-jest": "^24",
    "ts-node": "^8",
    "tslib": "^1",
    "typescript": "^3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist"
    ]
  },
  "nodemon": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "yarn start"
  }
}
