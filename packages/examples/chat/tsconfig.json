{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "../../core/@types",
      "../../core/node_modules/@types",
      "../../node_modules/@types"
    ],

    // strictness: exceptions for development (must be reversed in tsconfig.build.json)
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src", "@types"],
  "exclude": ["public", "cypress"]
}
