{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",

    // strictness: exceptions for development (must be reversed in tsconfig.build.json)
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src", "@types"],
  "references": [{ "path": "../core" }]
}
