{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true, // see note in cevitxe-types/tsconfig.json
    "sourceMap": true,
    "target": "es5"
  },
  "references": [{ "path": "../cevitxe-types" }, { "path": "../cevitxe-storage-abstract" }]
}
