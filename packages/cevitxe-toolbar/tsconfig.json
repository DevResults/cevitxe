{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "skipLibCheck": true, // see note in cevitxe-types/tsconfig.json
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src", "@types"],
  "references": [{ "path": "../cevitxe" }, { "path": "../cevitxe-types" }]
}
