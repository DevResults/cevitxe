{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "../../core/@types",
      "../../core/node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": ["src", "@types"],
  "exclude": ["public", "cypress"]
}
