{
  "name": "cevitxe-root",
  "version": "0.1.8",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "run-p watch start:grid",
    "start:chat": "yarn workspace cevitxe-example-chat start",
    "start:grid": "yarn workspace cevitxe-example-grid start",
    "start:todo": "yarn workspace cevitxe-example-todo start",
    "dev": "run-p watch test:watch",
    "dev:log": "run-p watch test:log",
    "dev:signal-server": "yarn workspace cevitxe-signal-server dev",
    "dev:chat": "run-p dev:signal-server watch start:chat",
    "dev:grid": "run-p dev:signal-server watch start:grid",
    "dev:todo": "run-p dev:signal-server watch start:todo",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "publish": "lerna publish --yes",
    "watch": "lerna run watch --stream --no-sort --concurrency 999",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:log": "cross-env DEBUG='cevitxe*' DEBUG_COLORS=1 yarn test:watch",
    "purge": "scripts/purge.bat"
  },
  "devDependencies": {
    "@types/jest": "24",
    "cross-env": "5",
    "jest": "24",
    "lerna": "3",
    "npm-run-all": "4",
    "ts-jest": "24"
  },
  "engines": {
    "yarn": "1.17.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/examples/*"
    ],
    "nohoist": [
      "**/jest/**",
      "**/jest"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/core",
      "<rootDir>/packages/signal-client",
      "<rootDir>/packages/signal-server",
      "<rootDir>/packages/examples/grid"
    ]
  }
}
