{
  "name": "@cevitxe/root",
  "version": "0.1.8",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "run-p watch start:todo",
    "start:chat": "yarn workspace @cevitxe/chat start",
    "start:grid": "yarn workspace @cevitxe/grid start",
    "start:todo": "yarn workspace @cevitxe/todo start",
    "dev": "run-p watch test:watch",
    "dev:chat": "run-p watch start:chat",
    "dev:grid": "run-p watch start:grid",
    "dev:todo": "run-p watch start:todo",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "publish": "lerna publish --yes",
    "watch": "lerna run watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:log": "cross-env DEBUG='cevitxe*' DEBUG_COLORS=1 yarn test --watch",
    "purge": "scripts/purge.bat"
  },
  "devDependencies": {
    "@types/jest": "^24",
    "cross-env": "^5.2.0",
    "jest": "^24",
    "lerna": "^3",
    "npm-run-all": "^4",
    "ts-jest": "^24"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/examples/*"
    ],
    "nohoist": [
      "**/jest/**",
      "**/jest"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/core",
      "<rootDir>/packages/signal-client",
      "<rootDir>/packages/signal-server",
      "<rootDir>/packages/examples/grid"
    ]
  }
}
