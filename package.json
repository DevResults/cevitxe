{
  "name": "@cevitxe/root",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "core",
      "examples/*",
      "components/*"
    ],
    "nohoist": [
      "**/jest/**",
      "**/jest"
    ]
  },
  "scripts": {
    "start": "run-p watch start:todo",
    "start:chat": "yarn workspace @cevitxe/chat start",
    "start:grid": "yarn workspace @cevitxe/grid start",
    "start:todo": "yarn workspace @cevitxe/todo start",
    "dev:chat": "run-p watch start:chat",
    "dev:grid": "run-p watch start:grid",
    "dev:todo": "run-p watch start:todo",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "publish": "lerna publish --yes",
    "watch": "run-p watch:*",
    "watch:core": "yarn workspace cevitxe watch",
    "watch:toolbar": "yarn workspace cevitxe-toolbar watch",
    "test": "jest --watch",
    "purge": "scripts/purge.bat"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "npm-run-all": "^4.1.5",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.2"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "projects": [
      "<rootDir>/core",
      "<rootDir>/examples/grid"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
