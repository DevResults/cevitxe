{
  "name": "cevitxe-root",
  "version": "0.1.8",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "run-p watch start:grid",
    "start:chat": "yarn workspace cevitxe-example-chat start",
    "start:grid": "yarn workspace cevitxe-example-grid start",
    "start:todo": "yarn workspace cevitxe-example-todo start",
    "dev": "run-p watch test:watch",
    "dev:log": "run-p watch test:log",
    "dev:signal-server": "yarn workspace cevitxe-signal-server dev",
    "dev:chat": "run-p watch dev:signal-server start:chat",
    "dev:grid": "run-p watch dev:grid:wait",
    "dev:grid:wait": "run-s wait dev:grid:start",
    "dev:grid:start": "run-p dev:signal-server start:grid",
    "dev:todo": "run-p watch dev:signal-server start:todo",
    "dev:grid:e2e": "run-p dev:grid test:grid:e2e",
    "dev:todo:e2e": "run-p dev:todo test:todo:e2e",
    "build:all": "lerna run build",
    "build": "tsc -b packages/signal-server packages/toolbar packages/core",
    "lint": "lerna run lint",
    "publish": "lerna publish --yes",
    "watch": "yarn build --watch",
    "wait": "wait-on ./packages/core/dist/src/index.js",
    "test": "jest",
    "test:todo:e2e": "yarn workspace cevitxe-example-todo test:e2e",
    "test:grid:e2e": "yarn workspace cevitxe-example-grid test:e2e",
    "test:watch": "jest --watch",
    "test:log": "cross-env DEBUG='cevitxe*' DEBUG_COLORS=1 yarn test:watch",
    "purge": "scripts/purge.bat"
  },
  "dependencies": {
    "esm": "3"
  },
  "resolutions": {
    "jest": "24.9.0"
  },
  "devDependencies": {
    "@types/jest": "24",
    "cross-env": "6",
    "jest": "24",
    "lerna": "3",
    "npm-run-all": "4",
    "ts-jest": "24",
    "wait-on": "^3.3.0"
  },
  "engines": {
    "yarn": "1.19.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/examples/*"
    ],
    "nohoist": [
      "**/jest/**",
      "**/jest"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/core",
      "<rootDir>/packages/signal-client",
      "<rootDir>/packages/signal-server",
      "<rootDir>/packages/examples/grid"
    ]
  }
}
